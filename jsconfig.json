{
  "compilerOptions": {
    "target": "es2018",
    "allowSyntheticDefaultImports": false,
   "module": "es6",
   "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "~/stores": ["src/stores"],
      "~/componens": ["src/componets"],
      "~/pages": ["src/pages"],
      "~/hooks": ["src/hooks"],
      "~/constants": ["src/constants"],
      "~/config": ["src/config"],
      "~/actions": ["src/actions"],
      "~/assets": ["src/assets"],

    },
  },
  "exclude": ["node_modules", "dist"],
}